
CREATE TABLE exclusions (
    exclusionId varchar(36) not null,
    taskId varchar(36) not null,
    day int null,
    dayOfWeek int null,
    dayType enum('Weekday', 'Weekend') null,
    month int null,
    year int null,
    criteria enum('First', 'Second', 'Third', 'Fourth', 'Last') null,
    PRIMARY KEY(exclusionId)
);

CREATE TABLE files(
    fileId varchar(36) not null,
    fileName varchar(50) not null unique,
    uploadDate date not null,
    PRIMARY KEY(fileId)
);

CREATE TABLE schedulings(
    schedulingId varchar(36) not null,
    taskId varchar(36) not null,
    schedulingDate date null,
    day int null,
    dayOfWeek int null,
    dayType enum('Weekday', 'Weekend') null,
    month int null,
    year int null,
    criteria enum('First', 'Second', 'Third', 'Fourth', 'Last') null,
    PRIMARY KEY(schedulingId)
);

CREATE TABLE tasks(
   taskId varchar(36) not null,
   fileId varchar(36) not null,
   period int not null,
   value int null,
   startDateAndTime date null,
   endDateAndTime date null,
   totalOccurrences int null,
   currentOccurrences int null,
   timezone varchar(36) null,
   PRIMARY KEY(taskId)
);