# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                 controllers.TaskController.index
GET     /scheduledTasks   controllers.TaskController.getSchedule
GET     /schedule/:id     controllers.TaskController.getScheduleById(id: Int)

GET     /files            controllers.FileController.getAllFiles
GET     /files/:id        controllers.FileController.getFileById(id: Int)
DELETE  /files/:id        controllers.FileController.deleteFile(id: Int)

POST    /schedule         controllers.TaskController.schedule

#PATCH   /schedule/:id
#DELETE  /schedule/:id
#PUT     /schedule/:id